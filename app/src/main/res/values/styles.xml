<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!--  Custom Style  -->
    <style name="EditTextProject" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_background_rounded</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:elegantTextHeight">true</item>
        <item name="textStartPadding">15dp</item>
        <item name="android:layout_height">45dp</item>
    </style>
<!-- Style for Button submit project-->
    <style name="ButtonSubmitProject" parent="@android:style/Widget.Material.Light.Button">
        <item name="android:background">@drawable/button_submit_rounded_1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:textSize">@dimen/button_text_size1</item>
        <item name="android:width">@dimen/button_size1</item>
    </style>
<!--  Style for Button in dialog for submit project  -->
    <style name="ButtonDialogSubmitProject" parent="@android:style/Widget.Material.Light.Button">
        <item name="android:background">@drawable/button_dialog_question</item>
        <item name="android:textColor">@color/customColorButton</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:textSize">@dimen/button_text_size1</item>
        <item name="android:width">@dimen/button_size1</item>
    </style>

    <style name="ButtonDialogSubmitProjectFragment" parent="@android:style/Widget.Material.Light.Button">
        <item name="android:background">@drawable/button_submit_rounded_2</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/button_text_size1</item>
        <item name="android:width">@dimen/button_size1</item>
    </style>

    <style name="ButtonCloseDialog" parent="@style/Widget.AppCompat.ImageButton">
        <item name="android:backgroundTint">@android:color/white</item>
    </style>

    <style name="TextCustomDialog1" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorTextCustomDialog</item>
        <item name="android:textSize">@dimen/text_dialog_size1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:height">150dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextCustomDialog2" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorTextCustomDialog</item>
        <item name="android:textSize">@dimen/text_dialog_size1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextNameRecyclerViewItem" parent="@style/Base.Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorTextCustomDialog</item>
        <item name="android:textSize">@dimen/text_listitem1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailsRecyclerViewItem" parent="@style/Base.Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorTextCustomDialog</item>
        <item name="android:textSize">@dimen/text_listitem2</item>
    </style>

</resources>